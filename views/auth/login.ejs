<%- include('../includes/userheader.ejs') %>
</head>
<body>
<%- include('../includes/usernav.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
                <h2> User Login </h2>
              <%   
                    if(loginErrors.length > 0){
                    %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <strong>Oops!</strong>
                      <% for(let error of loginErrors){ %>
                        <div>
                           <%= error.msg %>
                        </div>
                     <% } %>
          
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                   <% }
              %>
                   <div class="card-body">
                    <form action="/login" method="post" novalidate> 
                  <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="email" class="form-control"  name="email" placeholder="Email">
                    <div style="color:red"><%= userErr %></div>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control"  name="password" placeholder="Password">
                    <div style="color:red"><%= passwordErr %></div>
                  </div>
                
                   <input type="submit" class="btn btn-primary" value="Login">
                </form>
              <a href="/forgot-password" class="btn btn-success mt-4"> Forgot Password ? </a> 
                  </div>
        </div>
        </div>
    </div>
</div>   
<%- include('../includes/userfooter.ejs') %>


